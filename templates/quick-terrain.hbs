<form action="submit">

<fieldset>
    <legend>Theme</legend>
    <select name="theme" id="" style="width: 100%; border:none">
        <option value="random" selected>Random</option>
        {{#each themes}}
        <option value="{{@key}}">{{name}}</option>
        {{/each}}
    </select>
    <button data-action="theme"><i class="fas fa-palette"></i> Apply Theme</button>
</fieldset>


<div style="margin-top: 0.2rem; display: flex; flex-direction: column; color: var(--color-text-light-primary) !important;">
    <fieldset>
    <legend>Terrain</legend>
    <select name="terrain" id="" style="width: 100%; border:none">
        {{selectOptions terrainTypes localize=false}}
    </select>
    <button data-action="generate"><i class="fas fa-dice"></i> Generate</button>
    <button data-action="variation"><i class="fas fa-arrows-rotate"></i> Variation</button>
    <button data-action="fine-tune"><i class="fas fa-pencil-ruler"></i> Fine Tune</button>
    </fieldset>
    <fieldset style="margin-top: 0.2rem">
    <legend>Fluids</legend>
    <button data-action="water"><i class="fas fa-water"></i></i> Add Water</button>
    <button data-action="lava"><i class="fas fa-volcano"></i> Add Lava</button>
    <button data-action="acid"><i class="fas fa-vial"></i> Add Acid</button>
    </fieldset>
    <fieldset style="margin-top: 0.2rem">
    <legend>Tools</legend>
    <button data-tooltip="A Locked Tile cannot be selected except with Right Click" data-action="lock"><i class="fas fa-lock"></i> Lock/Unlock</button>
    <button data-action="grid"><i class="fas fa-grid"></i> Toggle Grid</button>
    </fieldset>
</div>
</form>